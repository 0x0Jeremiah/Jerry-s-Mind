import React, { useState, useEffect } from 'react';
import { View, Text, Button } from 'react-native';

const App = () => {
  const [likesCount, setLikesCount] = useState(0);
  const [commentsCount, setCommentsCount] = useState(0);
  const [mostUsedWords, setMostUsedWords] = useState([]);

  useEffect(() => {
    // Fetch data from the backend API
    fetchSocialMediaData();
  }, []);

  const fetchSocialMediaData = async () => {
    try {
      // Make API request to retrieve social media data
      const response = await fetch('YOUR_BACKEND_API_URL');
      const data = await response.json();

      // Extract required information from the data
      const { likes, comments, words } = data;

      // Set the retrieved data in the app's state
      setLikesCount(likes);
      setCommentsCount(comments);
      setMostUsedWords(words);
    } catch (error) {
      console.log('Error fetching social media data:', error);
    }
  };

  return (
    <View>
      <Text>Total Likes: {likesCount}</Text>
      <Text>Total Comments: {commentsCount}</Text>

      <Text>Most Used Words:</Text>
      {mostUsedWords.map((word, index) => (
        <Text key={index}>{word}</Text>
      ))}

      <Button title="Refresh" onPress={fetchSocialMediaData} />
    </View>
  );
};

export default App;
